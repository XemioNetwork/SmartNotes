<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="backgroundColor" A="255" R="52" G="152" B="219" />
    <Color x:Key="hoverBackgroundColor" A="255" R="62" G="182" B="255" />
    <Color x:Key="pressedBackgroundColor" A="255" R="42" G="122" B="175" />
    <Color x:Key="disabledBackgroundColor" A="255" R="149" G="165" B="166" />

    <LinearGradientBrush x:Key="dividerBrush" StartPoint="0, 0" EndPoint="0, 1">
        <GradientStop Offset="0" Color="Transparent" />
        <GradientStop Offset="0.6" Color="Gray" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="headerBackgroundBrush"  StartPoint="0, 0" EndPoint="0, 1">
        <GradientStop Offset="0" Color="White" />
        <GradientStop Offset="1" Color="#E5E5E5" />
    </LinearGradientBrush>

</ResourceDictionary>