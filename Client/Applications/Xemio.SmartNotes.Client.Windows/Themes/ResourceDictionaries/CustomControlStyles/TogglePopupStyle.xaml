<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Xemio.SmartNotes.Client.Windows.Themes.Controls">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../NamedStyles/ContentControlRegionStyle.xaml" />
    </ResourceDictionary.MergedDictionaries>
    
    <Style TargetType="{x:Type controls:TogglePopup}">
        <Setter Property="PopupAnimation" Value="Fade" />
        <Setter Property="Placement" Value="Bottom" />
        <Setter Property="StaysOpen" Value="False" />
        <Setter Property="AllowsTransparency" Value="True" />
        <Style.Resources>
            <Style TargetType="{x:Type ContentControl}" BasedOn="{StaticResource RegionContentControlStyle}" />
        </Style.Resources>
    </Style>
</ResourceDictionary>