<UserControl x:Class="Xemio.SmartNotes.Client.Views.Header.HeaderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             x:Name="control"
             Width="1280"
             Height="60"
             Background="{StaticResource headerBackgroundBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="60" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <!-- The xemio icon -->
            <Button Style="{StaticResource HeaderButton}">
                <Image Source="../../Images/Xemio-Logo.png" Margin="10" />
            </Button>
        
            <!-- The divider line -->
            <Line X1="81" X2="81" Y1="0" Y2="60" Style="{StaticResource DividerLine}" />
        </Grid>

        <StackPanel Grid.Column="1" Orientation="Horizontal">
            <Button Style="{StaticResource HeaderButton}" Content="Hallo Welt" />
            <Line X1="0" Y1="0" X2="0" Y2="60" Style="{StaticResource DividerLine}" />
            <Button Style="{StaticResource HeaderButton}" Content="Hallo Welt" />
            <Line X1="0" Y1="0" X2="0" Y2="60" Style="{StaticResource DividerLine}" />
            <Button Style="{StaticResource HeaderButton}" Content="Hallo Welt" />
            <Line X1="0" Y1="0" X2="0" Y2="60" Style="{StaticResource DividerLine}" />
        </StackPanel>
        
        <Grid Grid.Column="2">
            <!-- The divider line -->
            <Line X1="0" 
                  Y1="0" 
                  X2="0" 
                  Y2="60" 
                  Style="{StaticResource DividerLine}" />
            <!-- The user icon -->
            <Button Style="{StaticResource HeaderButton}" 
                    Click="UserIconClick">
                <Rectangle Width="40"
                           Height="40"
                           Margin="10"
                           RadiusX="40" 
                           RadiusY="40">
                    <Rectangle.Fill>
                        <ImageBrush ImageSource="../../Images/Person.jpg" />
                    </Rectangle.Fill>
                </Rectangle>
            </Button>
            <!-- The list popup -->
            <Popup x:Name="userActionsPopup"  
                   PopupAnimation="Slide" 
                   Placement="Bottom" 
                   PlacementTarget="{Binding ElementName=userIcon}" 
                   StaysOpen="False"
                   HorizontalOffset="-150">
                <Grid Background="#2c3e50" Width="200" Height="100">
                    <Label Content="Hallo Welt" />
                </Grid>
            </Popup>
        </Grid>
    </Grid>
</UserControl>
